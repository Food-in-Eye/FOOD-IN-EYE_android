<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/findBtn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/find_btn"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/basketBtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/basket_btn"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/myPageBtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/mypage_btn"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <!--TabLayout
        app:tabMode="scrollable"-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/store_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 1"
                android:textColor="@color/black"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 2"
                android:background=""/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 3"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 4"/>

        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>

    <!--Menu판-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/navy_rec"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/store_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/store_tab">



        </FrameLayout>

        <Button
            android:id="@+id/smBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/navy_rec_30"
            android:text="메뉴 1"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>