<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/findBtn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/find_btn"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/basketBtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/basket_btn"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/myPageBtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/mypage_btn"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="30dp"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/navy_rec"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="가게 1"
                android:textColor="@color/navy"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="가게 1"
                android:textColor="@color/navy"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="가게 1"
                android:textColor="@color/navy"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/smBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/navy_rec_30"
                android:text="메뉴 1"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/s1m2Btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/navy_rec_30"
                android:text="메뉴 2"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/s1m3Btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/navy_rec_30"
                android:text="메뉴 3"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>