<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- 커스텀 툴바 추가 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/intro_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorOnPrimary"
        android:elevation="4dp">

        <!-- 사용자 정의 뒤로 가기 버튼 추가 -->
        <ImageView
            android:id="@+id/intro_back"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/back_btn"
            android:contentDescription="뒤로 가기" />

        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한 눈에 학식"
            android:fontFamily="@font/mice_gothic_bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/intro_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/intro_1"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈 화면"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:orientation="vertical"
        android:background="@drawable/rec_str10"
        android:layout_margin="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지, 현재 주문내역, 주문하기, 앱 소개 탭을 \n통해 사용자가 원하는 곳으로 이동할 수 있어요."
            android:textSize="13dp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_home"
            android:layout_weight="1"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/intro_next_btn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="다음"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/sign_up"
        android:backgroundTint="@color/blue"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>
