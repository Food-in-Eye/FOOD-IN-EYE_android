<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_background"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/alert_menuName"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="메뉴 1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/tape_orange"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/alert_toMenu"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="더 담으러가기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/navy_rec_l300"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="3dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/alert_toCart"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="장바구니 가기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/navy_rec_r300"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shopping_cart_user"
                android:backgroundTint="@color/navy"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shopping_cart" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>