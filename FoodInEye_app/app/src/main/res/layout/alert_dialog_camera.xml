<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_background"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/camera_alert_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/delete_btn"
        android:backgroundTint="@color/gray"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:layout_width="420dp"
        android:layout_height="130dp"
        android:text="현재 시선 수집 이용 약관에 동의하지 않으셨습니다.\n
시선 수집 이용에 동의하시면 [한눈에 학식]앱 환경에 맞추어\n더 다양한 서비스를 제공받을 수 있습니다."
        android:textSize="12dp"
        android:textColor="@color/gray_up"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/tape_orange"
        android:backgroundTint="@color/blue_1"
        android:lineSpacingExtra="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/camera_alert_continue"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="유지하기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black_10"
            android:background="@drawable/navy_rec_l300"
            android:backgroundTint="@color/sygray"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="3dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/camera_alert_agree"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="서비스 제공 받기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black_10"
            android:background="@drawable/navy_rec_r300"
            android:backgroundTint="@color/sygray"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>