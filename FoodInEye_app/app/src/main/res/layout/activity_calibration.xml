<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CalibrationActivity">

    <!-- 커스텀 툴바 추가 -->
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:id="@+id/calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/real_home_order"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:background="@drawable/home_order"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="25dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="@id/calibrationBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/calibrationBtn"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:background="@drawable/orange_rec_30"
            android:backgroundTint="@color/navy"
            android:orientation="vertical"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Calibration"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="15dp"/>

        </LinearLayout>

    </LinearLayout>


    <!-- 시선 좌표 -->
    <visual.camp.sample.view.PointView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 캘리브레이션 뷰 -->
    <visual.camp.sample.view.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="-1dp"
        android:layout_y="-0dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="87dp">

    </visual.camp.sample.view.CalibrationViewer>

</androidx.constraintlayout.widget.ConstraintLayout>