<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/menu_detail_bg">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/findBtn"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/find_btn"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/basketBtn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/basket_btn"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/myPageBtn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/mypage_btn"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/menuD_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 1"
            android:textSize="30dp"
            android:textColor="@color/navy"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <!--menu intro-->

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/menuD_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴 한줄소개"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/menuD_allergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴 알러지"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/menuD_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴 원산지"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <!--orderBtn-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_rec_300">

        <TextView
            android:id="@+id/menuD_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 가격"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 원 담기"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</LinearLayout>