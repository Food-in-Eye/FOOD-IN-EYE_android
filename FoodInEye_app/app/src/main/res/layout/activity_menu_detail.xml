<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:background="@drawable/menu_detail_bg">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/findBtn"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/find_btn"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/basketBtn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/basket_btn"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/myPageBtn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/mypage_btn"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 1"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/menu_detail_image">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/pizza"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="370dp"
        android:layout_height="140dp"
        android:text="- 파인애플이 들어간 피자\n- 알레르기: 파인애플, 치즈"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/navy_rec"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 수량     -  1  +"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="25dp"/>

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="주문하기"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/navy_rec_30"
        android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>