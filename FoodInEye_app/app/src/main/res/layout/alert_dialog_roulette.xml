<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_background"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/alert_roulette_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/delete_btn"
        android:backgroundTint="@color/gray"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/alert_roulette_menuName"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="메뉴 1"
            android:textSize="20dp"
            android:textColor="@color/gray_up"
            android:gravity="center"
            android:background="@drawable/tape_orange"
            android:backgroundTint="@color/blue"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/menu_roulette_ani2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="right"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/firework"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/alert_roulette_toMenu"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="다시 돌리기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/navy_rec_l300"
            android:backgroundTint="@color/sygray"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="3dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/alert_roulette_toCart"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="장바구니 가기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/navy_rec_r300"
            android:backgroundTint="@color/sygray"
            android:gravity="center"
            android:layout_gravity="center"/>


    </LinearLayout>



</LinearLayout>