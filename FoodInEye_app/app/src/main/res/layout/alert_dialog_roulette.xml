<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/alert_dialog_background">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/menu_roulette_ani2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/firework"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/alert_roulette_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/delete_btn"
                    android:backgroundTint="@color/gray" />

                    <TextView
                        android:id="@+id/alert_roulette_menuName"
                        android:layout_width="250dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tape_orange"
                        android:backgroundTint="@color/blue"
                        android:gravity="center"
                        android:text="메뉴 1"
                        android:textColor="@color/gray_up"
                        android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alert_roulette_toMenu"
                        android:layout_width="160dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/navy_rec_l300"
                        android:backgroundTint="@color/sygray"
                        android:gravity="center"
                        android:text="한 번 더"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/alert_roulette_toCart"
                        android:layout_width="160dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/navy_rec_r300"
                        android:backgroundTint="@color/sygray"
                        android:gravity="center"
                        android:text="장바구니 가기"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />


        </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

</LinearLayout>