<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/homeLayout">

    <!-- 커스텀 툴바 추가 -->
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

<!--        <LinearLayout-->
<!--            android:layout_width="230dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/orange_rectop_300"-->
<!--            android:backgroundTint="@color/navy"-->
<!--            android:orientation="vertical"-->
<!--            tools:ignore="MissingConstraints">-->

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Food In Eye"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:fontFamily="@font/jalnan"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="25dp">

            <LinearLayout
                android:id="@+id/home_mypage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/mypage_btn"/>

            <LinearLayout
                android:id="@+id/home_orderdetail"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/home_orderdetail"
                android:layout_marginLeft="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 주문내역"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_order"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:background="@drawable/home_order"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="주문하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_calibration"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:background="@drawable/orange_rec_30"
            android:backgroundTint="@color/navy"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="시선 추적 시 \n calibration"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_margin="40dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>