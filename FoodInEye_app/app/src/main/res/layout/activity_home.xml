<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_rectop_300"
            android:backgroundTint="@color/navy"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Food in EYE"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="25dp">

            <LinearLayout
                android:id="@+id/home_mypage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/home_mypage">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_orderdetail"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/home_orderdetail"
                android:layout_marginLeft="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 주문내역"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_order"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/home_order"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="주문하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/orange_rec_30"
            android:backgroundTint="@color/navy"
            android:orientation="vertical">

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>